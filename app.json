{
  "name": "Government Frontend",
  "repository": "https://github.com/alphagov/government-frontend",
  "env": {
    "GOVUK_APP_DOMAIN": {
      "value": "www.gov.uk"
    },
    "GOVUK_ASSET_ROOT": {
      "value": "https://government-frontend.herokuapp.com"
    },
    "GOVUK_WEBSITE_ROOT": {
      "value": "https://www.gov.uk"
    },
    "PLEK_SERVICE_CONTENT_STORE_URI": {
      "value": "https://www.gov.uk/api"
    },
    "PLEK_SERVICE_STATIC_URI": {
      "value": "assets.digital.cabinet-office.gov.uk"
    },
    "RAILS_SERVE_STATIC_ASSETS": {
      "value": "yes"
    },
    "RAILS_SERVE_STATIC_FILES": {
      "value": "yes"
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "S3_AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "S3_SECRET_ACCESS_KEY": {
      "required": true
    },
    "DEPLOY_TASKS": {
      "value": "wraith:all_document_types"
    }
  },
  "image": "heroku/ruby",
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-ruby"
    },
    {
      "url": "https://github.com/stomita/heroku-buildpack-phantomjs"
    }
  ],
  "addons": [],
  "scripts": {
    "postdeploy": "bundle exec rake wraith:all_document_types[1]; yarn global add surge; surge --project public/shots/ --domain govuk-vr.surge.sh"
  }
}
